{% extends 'base.html.twig' %}


{% block body %}
    <h1>Liste des livres</h1>

    <table>
        <thead>
            {% for livre in livres %}
            <tr>
                <th>Titre</th>
                <th>Année d'édition</th>
                <th>Nombre de pages</th>
                <th>Code ISBN</th>
                <th>Auteur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>{{ livre.titre }}</td>
                    <td>{{ livre.annee_edition }}</td>
                    <td>{{ livre.nombre_pages }}</td>
                    <td>{{ livre.code_isbn }}</td>
                    <td>{{ livre.auteur_id }}</td>
                    <td>
                        <a href="{{ path('livre_details', {'id': livre.id}) }}">Détails</a>
                        <a href="{{ path('admin_livre_edit', {'id': livre.id}) }}">Modifier</a>
                        <a href="{{ path('livre_delete', {'id': livre.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce livre ?')">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
